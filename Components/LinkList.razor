<div class="col-4">
	<h2 class="text-center @TextClass">@Name</h2>
	@if(Content.Count > 0)
	{
		<ul>
			@foreach (Link item in Content)
			{
				<li>
					<a href="@item.Url">@item.Text</a>
				</li>
			}
		</ul>
	}
</div>

@code {
	[Parameter]
	public List<Link> Content { get; set; }
	[Parameter]
	public string? Name { get; set; }
	[Parameter]
	public string? TextClass { get; set; }
}
